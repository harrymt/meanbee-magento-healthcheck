<?xml version="1.0"?>
<config>
    <sections>
        <meanbee_healthcheck>
            <label>Meanbee Healthcheck</label>
            <tab>advanced</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="meanbee_healthcheck">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <expanded>1</expanded>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>
                    </fields>
                </general>
                <notification translate="label" module="meanbee_healthcheck">
                    <label>Notification Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <expanded>1</expanded>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <email_addresses translate="label">
                            <label>Email Addresses</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comments>Comma-separated list of email addresses to which notification emails should be sent.</comments>
                        </email_addresses>
                    </fields>
                </notification>
            </groups>
        </meanbee_healthcheck>
    </sections>
</config>
